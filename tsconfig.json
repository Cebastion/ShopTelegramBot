{
  "compilerOptions": {
    "target": "ESNext",                     // Версия ECMAScript, которую вы хотите использовать
    "module": "commonjs",                // Тип модуля: commonjs, amd, es2015, и т.д.
    "strict": true,                      // Строгий режим, включает все строгие проверки типов
    "esModuleInterop": true,             // Включает интероперабельность с CommonJS
    "skipLibCheck": true,                // Пропустить проверку объявлений библиотек
    "forceConsistentCasingInFileNames": true,  // Обязательное соблюдение регистра в именах файлов
    "outDir": "./dist",                  // Директория для скомпилированных файлов
    "rootDir": "./src",                  // Директория с исходным кодом
    "strictNullChecks": true             // Строгая проверка наличия значения null
  },
  "include": [
    "src/**/*.ts"                       // Путь к исходным файлам для компиляции
  ],
  "exclude": [
    "node_modules"                      // Исключить из компиляции файлы из директории node_modules
  ]
}
